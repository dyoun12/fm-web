# Backend 로컬 테스트용 환경 변수 예시
# 실제 사용 시에는 이 파일을 복사하여 .env 로 사용하거나,
# 셸에서 개별로 export 해서 사용하세요.
#
#   cd be-app
#   cp .env.example .env
#   # 또는: export $(grep -v '^#' .env | xargs)
#
# 주의: 실제 클라이언트 시크릿/도메인 등 민감 정보는 Git에 커밋하지 마세요.

########################################
# 기본 앱/테이블 설정
########################################

# DynamoDB Local 테이블 이름 (scripts/run_backend_local.sh 기본값과 맞춤)
POSTS_TABLE="fm_posts_local"
CATEGORIES_TABLE="fm_categories_local"
CORP_META_TABLE="fm_corp_meta_local"

# CORS 허용 도메인 (로컬 Next.js/Storybook)
CORS_ALLOW_ORIGINS="http://localhost:3000,http://localhost:6006"

########################################
# AWS/Cognito 기본 설정
########################################

# 리전 (예: ap-northeast-2)
AWS_REGION="ap-northeast-2"
COGNITO_REGION="ap-northeast-2"

# Cognito User Pool / App Client
COGNITO_USER_POOL_ID="your_user_pool_id"
COGNITO_CLIENT_ID="your_app_client_id"
COGNITO_CLIENT_SECRET="your_app_client_secret"  # 선택, 시크릿이 없는 클라이언트면 비워 두세요.

# Cognito Hosted UI 도메인 (예: example.auth.ap-northeast-2.amazoncognito.com)
COGNITO_DOMAIN="your_cognito_domain"

# Hosted UI 리다이렉트 URI (프론트엔드 /auth/callback 경로와 동일해야 함)
# 예: https://d84l1y8p4kdic.cloudfront.net/auth/callback (운영)
# 예: http://localhost:3000/auth/callback (로컬)
COGNITO_REDIRECT_URI="http://localhost:3000/auth/callback"

# 로그아웃 후 리다이렉트 URI (선택)
COGNITO_LOGOUT_REDIRECT_URI="http://localhost:3000/"

########################################
# Auth 쿠키 설정
########################################

# Access Token을 담을 HttpOnly 쿠키 이름
AUTH_COOKIE_NAME="fm_auth_token"

# HTTPS 환경에서만 쿠키를 전송할지 여부
# 로컬 개발 시에는 0, 운영에서는 1 추천
AUTH_COOKIE_SECURE="0"

########################################
# 기타 플래그
########################################

# API Gateway Cognito Authorizer를 신뢰할지 여부 (로컬 개발에서는 보통 0)
COGNITO_TRUST_API_GATEWAY="0"

########################################
# SES / 메일 발송 설정
########################################

# SES 리전 (기본값: AWS_REGION과 동일하게 동작)
SES_REGION="ap-northeast-2"

# SES 에서 검증된 발신 이메일 주소
SES_SOURCE_EMAIL="no-reply@example.com"

# Reply-To 이메일 (선택, 미설정 시 SES_SOURCE_EMAIL 사용)
SES_REPLY_TO_EMAIL=""

# 연락처/알림 메일 발송 활성화 플래그 (1=활성, 0=비활성)
CONTACT_NOTIFICATION_ENABLED="1"
